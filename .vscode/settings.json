// Place your settings in this file to overwrite default and user settings.
{
  "tslint.nodePath": "node_modules",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.jest-cache": true,
    "**/*.js": { "when": "$(basename).ts" },
    "**/**.js": { "when": "$(basename).tsx" },
    "**/*.jsx": true,
    "**/*.js.map": true,
    "**/*.jsx.map": true,
    "**/.awcache": true,
    "**/.server": true,
    "**/node_modules": true,
    "**/coverage": true,
    "**/jest": true,
    "**/hybris": true,
    "**/build-tools": true,
    "**/c4c-integration": true,
    "**/hybris-ems": true,
    "**/hybris-sbg": true,
    "**/installer": true,
    "**/licenses": true,
    "**/hybris-Mobile-Apps-SDK": true,
    "**/.next": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/.jest-cache": true,
    "**/*.snap": true,
    "**/*.js": true,
    "**/hybris": true,
    "**/.storybook": true,
    "**/build-tools": true,
    "**/c4c-integration": true,
    "**/hybris-ems": true,
    "**/hybris-sbg": true,
    "**/installer": true,
    "**/licenses": true,
    "**/hybris-Mobile-Apps-SDK": true
  },
  "path-intellisense.mappings": {
    "/": "${workspaceRoot}/app",
    "components": "${workspaceRoot}/app/components",
    "helpers": "${workspaceRoot}/app/helpers",
    "modules": "${workspaceRoot}/app/modules",
    "types": "${workspaceRoot}/app/types"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "tslint.autoFixOnSave": true
}
